{
  "manifest_version": 3,
  "name": "Chrome Screenshot Annotator",
  "version": "0.1.0",
  "description": "Capture current page, draw annotations, and copy result to clipboard.",
  "permissions": ["tabs", "storage", "clipboardWrite", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Capture and annotate"
  }
}
